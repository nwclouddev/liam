= render 'shared/errors', obj: @event_component
.container.mx-auto{:style => "max-width: 40rem;"}
  = form_for @event_component, html: { class: "form-horizontal", role: "form" } do |f|
    .form-group
      = f.label :code
      - if @event_component.persisted?
        = f.text_field :code, class: 'form-control', disabled: true
      - else
        = f.text_field :code, class: 'form-control', required: true
    .form-group
      = f.label :description
      = f.text_field :description, class: 'form-control', required: true
    .form-group.form-check
      = f.check_box :not_used, class: 'form-check-input'
      = f.label :not_used, "Out of Service", class: 'form-check-label'
    = render 'shared/form_navigation'