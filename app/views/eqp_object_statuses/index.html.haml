.page-header
  %p
  = link_to new_eqp_object_status_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    Equipment status
  %h1Eqp_object_statuses
.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Sequence
        %th Status Code
        %th Description
        %th{:style => "text-align:center"} Available on create
        %th{:style => "text-align:center"} Out of Service
    %tbody
      - @eqp_object_statuses.each do |eqp_object_status|
        %tr
          %td= link_to eqp_object_status.seq, edit_eqp_object_status_path(eqp_object_status)
          %td= eqp_object_status.status_code
          %td= eqp_object_status.description
          %td{:style => "text-align:center"}
            - if eqp_object_status.active_on_create
              %i.far.fa-check-square
            - else
              %i.far.fa-square
          %td{:style => "text-align:center"}
            - if eqp_object_status.not_used
              %i.far.fa-check-square
            - else
              %i.far.fa-square