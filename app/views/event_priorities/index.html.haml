.page-header
  %h1 Work Order Priority Setup
  %p
  = link_to new_event_priority_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Work Order Priority
  %h1evt_criticalities

.table-responsive
  %table.table.table-striped.table-hover#myTable
    %thead
      %tr
        %th{"data-card-title" => ""} Sequence
        %th Description
        %th{:style => "text-align:center"} Out of Service
    %tbody
      - @event_priorities.each do |event_priority|
        %tr
          %td= link_to event_priority.seq, edit_event_priority_path(event_priority)
          %td= event_priority.description
          %td{:style => "text-align:center"}
            - if event_priority.not_used
              %i.far.fa-check-square
            - else
              %i.far.fa-square
