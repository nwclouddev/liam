<h3 class="mb-2 text-gray-800">Equipment</h3>

<%= link_to new_eqp_object_path, class: 'btn btn-primary' do %>
  <span class="fas fa-plus"></span>
  Add Asset
<% end %>
<% @eqp_objects.each do |eqp_object| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to eqp_object.code, edit_eqp_object_path(eqp_object) %></h5>
      <p class="card-text">
        <%= eqp_object.organization.code%> - <%= eqp_object.description %><br>
        <%= eqp_object.alias %><br>
        <%= eqp_object.eqp_object_category.code %> - <%= eqp_object.eqp_object_category.description %><br>
        <%= eqp_object.status_code %>
        <%= eqp_object.eqp_object_status.description %><br>
      </p>
    </div>
  </div>
<% end %>
<div class='pagination justify-content-center'>
  <%= paginate @eqp_objects, theme: 'twitter-bootstrap-4', align: 'center' %>
</div>
<%= form_tag import_eqp_objects_path, multipart: true do %>
  <div class='form-group'>
    <%= file_field_tag :file, class: 'form-control-file' %>
  </div>
  <%= submit_tag "Upload", class: 'btn btn-primary' %>
<% end %>