<h1>Stores</h1>
<%= link_to new_store_path, class: 'btn btn-primary' do %>
  <span class="far fa-file"></span>
  New
<% end %>
<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Code</th>
        <th>Description</th>
        <th>Organization</th>
        <th>Not used</th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td>
            <%= link_to store.code, edit_store_path(store) %>
          </td>
          <td>
            <%= store.description %>
          </td>
          <td>
            <%= store.organization.code %>
          </td>
          <td>
            <%= store.not_used %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pagination justify-content-center'>
    <%= paginate @stores, theme: 'twitter-bootstrap-4', align: 'center' %>
  </div>
</div>
