<h1>Parts</h1>
<%= link_to purchase_orders_path, class: 'btn btn-primary' do %>
  <span class="far fa-gear"></span>
    Purchase Orders
<% end %>

<hr>
<%= link_to new_part_path, class: 'btn btn-primary' do %>
  <span class="far fa-file"></span>
  New
<% end %>
<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Part</th>
        <th>Description</th>
        <th>Class</th>
        <th>UOM</th>
        <th style="text-align:center">Out of Service</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td>
            <%= link_to part.id, edit_part_path(part) %>
          </td>
          <td>
            <%= part.description %>
          </td>
          <td>
            <%= part.part_class.code %>
          </td>
          <td>
            <%= part.part_uom.code %>
          <td style="text-align:center">
            <% if part.not_used %>
              <i class="far fa-check-square"></i>
            <% else %>
              <i class="far fa-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pagination justify-content-center'>
    <%= paginate @parts, theme: 'twitter-bootstrap-4', align: 'center' %>
  </div>
</div>
