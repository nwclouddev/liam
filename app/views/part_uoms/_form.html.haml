= form_for @part_uom do |f|
  - if @part_uom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@part_uom.errors.count, "error")} prohibited this part_uom from being saved:"
      %ul
        - @part_uom.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :not_used
    = f.check_box :not_used
  .actions
    = f.submit 'Save'
