<h1>Suppliers</h1>

<%= link_to new_supplier_path, class: 'btn btn-primary' do %>
  <span class="far fa-file"></span>
  New
<% end %>
<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Supplier</th>
        <th>Description</th>
        <th style="text-align:center">Out of Service</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td>
            <%= link_to supplier.code, edit_supplier_path(supplier) %>
          </td>
          <td>
            <%= supplier.description %>
          </td>
          <td style="text-align:center">
            <% if supplier.not_used %>
              <i class="far fa-check-square"></i>
            <% else %>
              <i class="far fa-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pagination justify-content-center'>
    <%= paginate @suppliers, theme: 'twitter-bootstrap-4', align: 'center' %>
  </div>
</div>
