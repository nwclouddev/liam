= render 'shared/errors', obj: @event_status
= form_for @event_status, html: { class: "form-horizontal", role: "form" } do |f|
  .form-group
    = f.label :seq
    = f.number_field :seq, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .form-group.form-check
    = f.check_box :active_event, class: 'form-check-input'
    = f.label :active_event, "Open Event", class: 'form-check-label' 
  .form-group.form-check
    = f.check_box :active_on_create, class: 'form-check-input'
    = f.label :active_on_create, "Active on Create", class: 'form-check-label'  
  .form-group.form-check
    = f.check_box :active_on_update, class: 'form-check-input'
    = f.label :active_on_update, "Active on Update", class: 'form-check-label'
  .form-group.form-check
    = f.check_box :not_used, class: 'form-check-input'
    = f.label :not_used, "Out of Service", class: 'form-check-label'
  = render 'shared/form_navigation'